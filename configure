. ./config.sub

basedir="FreeBSD-base"
workdir="./work"

# TODO: figure out a way to do a shallow clone, b/c this is 1GB of stuff
if [ ! -d $basedir ] ; then
	echo "checking out a copy of FreeBSD"
	svn checkout --quiet https://svn.FreeBSD.org/base/head $basedir
fi

if [ ! -d $workdir ] ; then
	echo "Copying libnv sources to $workdir"
	#set -ex
	mkdir -p $workdir/src $workdir/include/sys
	cp -i $basedir/sys/contrib/libnv/*.[ch] $workdir/src
	cp -i $basedir/lib/libnv/*.[ch] $workdir/src
	cp $basedir/sys/sys/nv.h $workdir/include/sys
	#set +ex
fi

PACKAGE_NAME=libnv
PACKAGE_VERSION=$(svn info $basedir | grep Revision | awk '{ print $2 }')
LIBRARIES=libnv
libnv_CFLAGS="-include ./config.h -I`pwd`/include -std=c99 -Wall -Werror"
libnv_SOURCES="$workdir/src/nvlist.c $workdir/src/nvpair.c $workdir/src/msgio.c"

write_makefile
